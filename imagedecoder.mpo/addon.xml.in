<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="imagedecoder.mpo"
  version="1.0.1"
  name="MPO image decoder"
  provider-name="spiff">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.imagedecoder"
    library_@PLATFORM@="@LIBRARY_FILENAME@"
    extension=".mpo"
    mimetype="image/mpo"/>
  <extension point="xbmc.addon.metadata">
    <summary>Multi Picture Object (MPO) image decoder</summary>
    <description>An addon to decode MPO (multiple picture object) files. These are used mainly for 3D cameras and the Nintendo 3DS.</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
